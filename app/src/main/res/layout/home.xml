<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="cs.nsu.edu.ir.MainActivity"
    android:background="@drawable/bg_nsu">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:background="#240c2908"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/analogClock"
        android:layout_alignEnd="@+id/analogClock" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton"
        android:src="@drawable/library"
        android:background="#1e000000"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/imageButton4"
        android:layout_toStartOf="@+id/imageButton4"
        android:layout_marginRight="38dp"
        android:layout_marginEnd="38dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/profileBtn"
        android:src="@drawable/circle"
        android:background="#1e000000"
        android:layout_marginBottom="46dp"
        android:layout_above="@+id/imageButton4"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton3"
        android:src="@drawable/arrows"
        android:background="#1e030303"
        android:layout_alignTop="@+id/imageButton"
        android:layout_toRightOf="@+id/profileBtn"
        android:layout_toEndOf="@+id/profileBtn"
        android:layout_marginLeft="46dp"
        android:layout_marginStart="46dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton4"
        android:src="@drawable/squares"
        android:background="#1e020202"
        android:layout_above="@+id/imageButton5"
        android:layout_alignLeft="@+id/profileBtn"
        android:layout_alignStart="@+id/profileBtn" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton5"
        android:src="@drawable/pen"
        android:background="#1e030202"
        android:layout_marginTop="42dp"
        android:layout_below="@+id/imageButton"
        android:layout_toRightOf="@+id/imageButton"
        android:layout_toEndOf="@+id/imageButton" />

    <AnalogClock
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/analogClock"
        android:layout_above="@+id/profileBtn"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="36dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/action_Inbox"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"

        android:src="@android:drawable/ic_dialog_email"
        android:background="@android:color/transparent"
        android:layout_alignLeft="@+id/imageView"
        android:layout_alignStart="@+id/imageView"
        android:layout_alignBottom="@+id/analogClock"
        android:layout_below="@+id/imageView" />

    <Button
        style="@style/buttonColors"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Profile"
        android:id="@+id/button"
        android:layout_alignTop="@+id/analogClock"
        android:layout_toLeftOf="@+id/analogClock"
        android:layout_toStartOf="@+id/analogClock" />

</RelativeLayout>
